<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns = "http://www.springframework.org/schema/beans"
       xmlns:xsi = "http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context = "http://www.springframework.org/schema/context"
       xsi:schemaLocation = "http://www.springframework.org/schema/beans
   http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
   http://www.springframework.org/schema/context
   http://www.springframework.org/schema/context/spring-context-3.0.xsd">

    <context:annotation-config/>
    <context:component-scan base-package="com.javaBrain.springAnnotations"/>



    <bean id="center" class="com.javaBrain.springAnnotations.Point">
        <property name="x" value="0"></property>
        <property name="y" value="0"></property>
    </bean>
    <bean id="pointA" class="com.javaBrain.springAnnotations.Point">
        <property name="x" value="20"></property>
        <property name="y" value="0"></property>
    </bean>
    <bean id="pointB" class="com.javaBrain.springAnnotations.Point">
        <property name="x" value="-20"></property>
        <property name="y" value="0"></property>
    </bean>


</beans>