<?xml version="1.0" encoding="UTF-8"?>
<beans
        xmlns="http://www.springframework.org/schema/beans"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns:p="http://www.springframework.org/schema/p"
        xsi:schemaLocation="http://www.springframework.org/schema/beans
               http://www.springframework.org/schema/beans/spring-beans-4.0.xsd">

    <bean id="traingle" class="com.javaBrain.springObjectInjection.Traingle">
        <property name="pointA" ref="point1"/>
        <property name="pointB" ref="point2"/>
        <property name="pointC" ref="point3"/>
    </bean>
    <bean id="point1" class="com.javaBrain.springObjectInjection.Point">
         <property name="x" value="0"></property>
        <property name="y" value="0"></property>
    </bean>
    <bean id="point2" class="com.javaBrain.springObjectInjection.Point">
        <property name="x" value="-20"></property>
        <property name="y" value="0"></property>
    </bean>
    <bean id="point3" class="com.javaBrain.springObjectInjection.Point">
        <property name="x" value="0"></property>
        <property name="y" value="20"></property>
    </bean>
</beans>